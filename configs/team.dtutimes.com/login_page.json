{
 "match": "^/login",
 "description": "How to login on Teams Portal?",
 "config": [
  {
   "id": "email",
   "text": "Input your email here",
   "attachTo": {
    "element": "#email",
    "on": "bottom"
   },
   "classes": "email",
   "tasks": [
    "next"
   ],
   "buttons": [
    {
     "text": "Next",
     "task": "next"
    }
   ]
  },
  {
   "id": "password",
   "text": "Input your password here",
   "attachTo": {
    "element": "#password",
    "on": "bottom"
   },
   "tasks": [
    "next"
   ],
   "classes": "password",
   "buttons": [
    {
     "text": "Next",
     "task": "next"
    }
   ]
  },
  {
   "id": "done",
   "text": "Click on the login button",
   "attachTo": {
    "element": "button.flex",
    "on": "bottom"
   },
   "tasks": [
    "next"
   ],
   "buttons": [
    {
     "text": "Finish",
     "task": "next"
    }
   ]
  },
  {
   "id": "alert",
   "text": "This is a test alert",
   "attachTo": {
    "element": "button.flex",
    "on": "bottom"
   },
   "tasks": [
    "next"
   ],
   "buttons": [
    {
     "text": "Finish",
     "task": "alert('This is a test alert')"
    }
   ]
  }
 ]
}